{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://sfcc.com/libs/all-definitions",
    "definitions": {
        "anyComponent": {
            "enum": [
                "https://sfcc.com/components/hero",
                "https://sfcc.com/components/section",
                "https://sfcc.com/components/curated-product"
            ]
        },
        "anyPage": {
            "enum": [
                "https://sfcc.com/site/pages/content-page"
            ]
        },
        "anyComponentAndPage": {
            "enum": [
                "https://sfcc.com/components/hero",
                "https://sfcc.com/components/section",
                "https://sfcc.com/components/curated-product",
                "https://sfcc.com/site/pages/content-page"
            ]
        },
        "anySlot": {
            "enum": [
                "https://sfcc.com/slots/flexible-list"
            ]
        },
        "image": {
            "properties": {
                "image": {
                    "type": "object",
                    "title": "Image",
                    "description": "Image",
                    "anyOf": [
                        {
                            "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/image-link"
                        }
                    ]
                },
                "imageAltText": {
                    "type": "string",
                    "title": "Image alt text",
                    "description": "Alternative text for image for SEO",
                    "minLength": 0,
                    "maxLength": 50
                },
                "seoText": {
                    "type": "string",
                    "title": "SEO Text",
                    "description": "e.g. ladies-sunglasses",
                    "minLength": 0,
                    "maxLength": 100
                }
            }
        },
        "richText": {
            "type": "array",
            "ui:extension": {
                "name": "rich-text",
                "params": {
                    "language": "json",
                    "styles": "",
                    "tools": {
                        "blacklist": [],
                        "dc-content-link": {
                            "contentTypes": [
                            ],
                            "contentTypeSettings": {
                            }
                        },
                        "inline_styles": {
                            "classNames": [
                                {
                                    "className": "was-price",
                                    "label": "Was Price"
                                }
                            ]
                        }
                    },
                    "toolbar": {
                        "layout": [
                            {
                                "type": "group",
                                "children": [
                                    {
                                        "type": "button",
                                        "toolName": "undo"
                                    },
                                    {
                                        "type": "button",
                                        "toolName": "redo"
                                    }
                                ]
                            },
                            {
                                "type": "dropdown",
                                "label": "Styles",
                                "toolNames": [
                                    "inline_styles_className_was-price"
                                ]
                            },
                            {
                                "type": "group",
                                "children": [
                                    {
                                        "type": "button",
                                        "toolName": "strong"
                                    },
                                    {
                                        "type": "button",
                                        "toolName": "em"
                                    },
                                    {
                                        "type": "button",
                                        "toolName": "link"
                                    }
                                ]
                            },
                            {
                                "type": "group",
                                "children": [
                                    {
                                        "type": "button",
                                        "toolName": "bullet_list"
                                    },
                                    {
                                        "type": "button",
                                        "toolName": "ordered_list"
                                    }
                                ]
                            },
                            {
                                "type": "group",
                                "children": [
                                    {
                                        "type": "button",
                                        "toolName": "dc-image-link"
                                    },
                                    {
                                        "type": "button",
                                        "toolName": "image"
                                    },
                                    {
                                        "type": "button",
                                        "toolName": "dc-content-link"
                                    },
                                    {
                                        "type": "button",
                                        "toolName": "blockquote"
                                    },
                                    {
                                        "type": "button",
                                        "toolName": "code_block"
                                    },
                                    {
                                        "type": "button",
                                        "toolName": "horizontal_rule"
                                    }
                                ]
                            },
                            {
                                "type": "group",
                                "children": [
                                    {
                                        "type": "button",
                                        "toolName": "clear_formatting"
                                    }
                                ]
                            }
                        ]
                    }
                }
            }
        }
    }
}