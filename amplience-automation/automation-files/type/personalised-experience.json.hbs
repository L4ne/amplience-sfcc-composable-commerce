{
    "contentTypeUri": "https://sfcc.com/components/personalised-experience",
    "status": "ACTIVE",
    "settings": {
        "label": "Personalised Experience",
        "icons": [
            {
                "size": 256,
                "url": "https://bigcontent.io/cms/icons/experience-management/exp-content.png"
            }
        ],
        "visualizations": [
            {{#each visualisations}}
            {
                "label": "{{this.name}}",
                "templatedUri": "{{this.url}}/\{{locales}}/visualization?vse=\{{vse.domain}}&contentId=\{{content.sys.id}}&hub=\{{hub.name}}",
                "default": "{{this.default}}"
            },
            {{/each}}
            {
                "label": "JSON",
                "templatedUri": "https://delivery-preview.visualizations.content.amplience.net?id=\{{content.sys.id}}&vse=\{{vse.domain}}&locale=\{{locales}}&hub=\{{cms.hub}}&realtime=true",
                "default": false
            }
        ],
        "cards": []
    },
    "repositories": [
        "content"
    ]
}